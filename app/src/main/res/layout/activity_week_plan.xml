<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1e1d1d"
    android:layout_height="match_parent"
    tools:context=".WeekPlan">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="246dp"
        android:layout_height="39dp"
        android:layout_marginTop="28dp"
        android:textColor="@color/white"
        android:text="7 Days healthful eating plan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/planman"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:layout_marginBottom="228dp"
        android:background="@drawable/heightbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.125">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:text="7 Days Eating Plan for Men"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="163dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="234dp"
            android:clickable="true"
            android:padding="5dp"
            android:text="Add to faivorates"
            android:textColor="#F11111">

        </TextView>

        <ImageView
            android:id="@+id/fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="22dp"
            android:layout_marginStart="199dp"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_favorite_border_24"
            android:textColor="#F11111" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/planwoman"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@drawable/heightbackground"
        app:layout_constraintBottom_toTopOf="@+id/sevenday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/planman"
        app:layout_constraintVertical_bias="0.671">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="23dp"
            android:text="7 Days Eating Plan for Woman"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sevenday"
        android:layout_width="408dp"
        android:layout_height="72dp"
        android:layout_marginBottom="268dp"
        android:background="@drawable/heightbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="23dp"
            android:text="7 day Belly lose plan "
            android:textColor="@color/white"
            android:textSize="20sp" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>